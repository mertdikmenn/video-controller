{
  "manifest_version": 3,
  "name": "Remote Video Toggle",
  "version": "0.5.0",
  "description": "Toggle play/pause of a chosen tab from a phone controller website.",
  "permissions": ["scripting", "tabs", "storage"],
  "host_permissions": [
    "http://localhost:8080/*",
    "<all_urls>"
  ],
  "action": { "default_title": "Set this tab as Player" },
  "background": { "service_worker": "background.js" }
}
